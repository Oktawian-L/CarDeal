<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/promotion_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Promocje"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="16dp"
        android:padding="5dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/promotion_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/promotion_label"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/new_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="NowoÅ›ci"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/promotion_list"
        android:padding="5dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/new_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/new_label"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/category_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horror"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/new_list"
        android:padding="5dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/category_label"
        tools:layout_editor_absoluteX="0dp"
        android:layout_margin="5dp"
        android:padding="5dp"/>
</android.support.constraint.ConstraintLayout>