<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ProductsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filter"
            android:background="@drawable/button_shape"/>

        <Button
            android:id="@+id/sort_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sort"
            android:background="@drawable/button_shape"/>

        <ImageButton
            android:id="@+id/change_view_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_shape"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/products_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >

        <Button android:id="@+id/categories_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/categories"/>
        <Button android:id="@+id/cart_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Koszyk"/>
        <Button android:id="@+id/search_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Szukaj"/>
        <Button android:id="@+id/favorites_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ulubione"/>

    </LinearLayout>


</LinearLayout>